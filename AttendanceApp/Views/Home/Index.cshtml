@model IEnumerable<AttendanceApp.Models.Classes4Teacher>
@Styles.Render("~/Content/style.css")
@Styles.Render("~/Content/stylecard.css")
@Scripts.Render("~/bundles/index")
@Scripts.Render("~/bundles/card")
<script src="jquery.alertable.min.js"></script>
@Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js")
@Scripts.Render("https://code.jquery.com/jquery-2.2.4.min.js")
@Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/velocity/1.2.3/velocity.min.js")
@Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/velocity/1.2.3/velocity.ui.min.js")
@Scripts.Render("https://rawgit.com/claviska/jquery-alertable/master/jquery.alertable.min.js")


@{
    ViewBag.Title = "Logged in";

}

<div>
    <div class="wrapper">
        <div class="containers">
            <br />
            <br />


            @if (ViewBag.User != null)
            {
            <h1>Välkommen @ViewBag.UserName!</h1>
                <br />
                <div class="cardWrapper">
                    @foreach (var item in Model)
                    {
                        if (item.Id == Convert.ToInt32(ViewBag.User))
                        {
                            using (Html.BeginForm("InitClass", "Home", FormMethod.Post))
                            {
                                <div class="cardContainer">
                                    <div class="card">
                                        <div class="front">
                                            <h3 class="cardTitle">
                                                <br />@item.ClassName<br /><br />
                                                @Html.AntiForgeryToken()
                                                @Html.Hidden("TeacherId", item.Id)
                                                <button type="submit" id="login-button">Starta lektion</button>
                                            </h3>
                                        </div>
                                        <div class="back">
                                            <div class="content">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        }
                    }
                </div>

                <link rel="stylesheet" href="jquery.alertable.css">
                <script src="~/Scripts/jquery-3.3.1.min.js"></script>
                <script src="~/Scripts/jquery.alertable.min.js"></script>
                <script>
                    $('.confirm-html').on('click', function () {
                        $.alertable.confirm('Are you <em>really</em> sure?', {
                            html: true
                        }).then(function () {
                            console.log('Confirmation submitted');
                        }, function () {
                            console.log('Confirmation canceled');
                        });
                    });

                                                                                                            //$('.card').click(function () {
                                                                                                            //    $(this).toggleClass('flipped');
                                                                                                            //});

                </script>
            }
            else if (ViewBag.User != null && ViewBag.Status == "True")
            {
                <text>Din lektion har startat @ViewBag.UserName , @ViewBag.ident </text>
            }
            else
            {
                @Html.Action("Login")
            }

        </div>

        <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
</div>




